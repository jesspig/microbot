{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "../..",
    "paths": {
      "@micro-agent/types": ["packages/types/src/index.ts"],
      "@micro-agent/runtime": ["packages/runtime/src/index.ts"],
      "@micro-agent/config": ["packages/config/src/index.ts"],
      "@micro-agent/storage": ["packages/storage/src/index.ts"],
      "@micro-agent/sdk": ["packages/sdk/src/index.ts"],
      "@micro-agent/providers": ["packages/providers/src/index.ts"],
      "@micro-agent/providers/acp": ["packages/providers/src/acp/index.ts"],
      "@micro-agent/providers/acp/*": ["packages/providers/src/acp/*"],
      "@micro-agent/server": ["packages/server/src/index.ts"],
      "@micro-agent/extension-system": ["packages/extension-system/src/index.ts"]
    }
  },
  "include": ["src/**/*", "../../extensions/**/*"],
  "exclude": ["node_modules", "dist"]
}
