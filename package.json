{
  "name": "microbot",
  "version": "0.1.1",
  "description": "超轻量级个人 AI 助手框架",
  "type": "module",
  "author": "jesspig",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jesspig/microbot.git"
  },
  "workspaces": ["packages/*"],
  "trustedDependencies": ["@larksuiteoapi/node-sdk"],
  "bin": {
    "microbot": "./src/cli.ts"
  },
  "main": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "prepare": "bun link",
    "dev": "bun run src/cli.ts start",
    "start": "bun run src/cli.ts start",
    "test": "bun test",
    "test:container": "bun test tests/unit/container.test.ts",
    "test:config": "bun test tests/unit/config.test.ts",
    "test:unit": "bun test tests/unit/",
    "test:integration": "bun test tests/integration/",
    "test:e2e": "bun test tests/e2e/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@microbot/core": "workspace:*",
    "@larksuiteoapi/node-sdk": "^1.59.0",
    "@logtape/logtape": "^2.0.2",
    "@logtape/pretty": "^2.0.2",
    "ai": "^6.0.92",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "mitt": "^3.0.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "typescript": "^5.9.3"
  }
}