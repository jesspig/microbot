{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@micro-agent/types": ["./packages/types/src"],
      "@micro-agent/types/*": ["./packages/types/src/*"],
      "@micro-agent/runtime": ["./packages/runtime/src"],
      "@micro-agent/runtime/*": ["./packages/runtime/src/*"],
      "@micro-agent/config": ["./packages/config/src"],
      "@micro-agent/config/*": ["./packages/config/src/*"],
      "@micro-agent/storage": ["./packages/storage/src"],
      "@micro-agent/storage/*": ["./packages/storage/src/*"],
      "@micro-agent/providers": ["./packages/providers/src"],
      "@micro-agent/providers/*": ["./packages/providers/src/*"],
      "@micro-agent/extension-system": ["./packages/extension-system/src"],
      "@micro-agent/extension-system/*": ["./packages/extension-system/src/*"],
      "@micro-agent/sdk": ["./packages/sdk/src"],
      "@micro-agent/sdk/*": ["./packages/sdk/src/*"],
      "@micro-agent/server": ["./packages/server/src"],
      "@micro-agent/server/*": ["./packages/server/src/*"]
    },
    "types": ["bun"]
  },
  "include": ["extensions/**/*", "apps/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}